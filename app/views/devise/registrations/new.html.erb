<h2><%= t('.sign_up') %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :nickname, "ニックネーム" %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "ニックネーム" %>
  </div>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認" %>
  </div>
  <div class="field">
    <%= f.label :introduction, "一言紹介" %><br />
    <%= f.text_field :introduction, placeholder: "一言紹介" %>
  </div>
  <div class="avatar_field">
    <%= f.label :avatar, "アバター" %><span class="small"> jpg, jpeg, gif, png</span><br>
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
