<%= render 'shared/page_title', page_title: "マイページ" %>
<div class="py-4 bg-light">
  <% if current_user.present? %>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-sm-9 p-3">
          <h2 class="wrapping-signup text-center mt-4">マイページ</h2>
          <div class="text-center mt-3 mb-4">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar.variant(resize: "200x200", gravity: "center", crop: "200x200+0+0", quality: 70).processed %>
            <% else %>
              <%= image_tag 'sampleavatar.jpeg', size: '200x200' %>
            <% end %>
          </div>
          <div class="col-12 col-lg-8 mx-auto">
            <table class="mypagetable table font-m-400 mx-auto">
              <tbody class="px-3">
                <tr>
                  <th scope="row">ニックネーム</th>
                  <td><%= current_user.nickname %></td>
                </tr>
                <tr>
                  <th scope="row">一言紹介</th>
                  <td colspan="2"><%= current_user.introduction %></td>
                </tr>
                <tr>
                  <th scope="row">メールアドレス</th>
                  <td><%= current_user.email %></td>
                </tr>
                <tr>
                  <th scope="row">パスワード</th>
                  <td colspan="2">表示されません</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <%= render 'shared/nologin' %>
  <% end %>
</div>
