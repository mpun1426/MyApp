<div class="topborder"></div>
<div class="container">
  <div class="row" data-turbolinks="false">
    <div class="col-12 col-lg-11 mx-0 mx-lg-auto my-3 d-flex" style="min-height: 130px;">
      <div class="col d-flex align-items-center me-md-4" style="max-width: 130px;">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', class: "img-responsive w-100", alt: "logo" %>
        <% end %>
      </div>
      <div class="col d-flex align-items-center" style="max-width: 250px;">
        <%= link_to root_path do %>
          <%= image_tag 'banner.png', class: "img-responsive w-100", alt: "banner" %>
        <% end %>
      </div>
      <div class="col d-flex align-items-center justify-content-end">
        <nav class="navbar navbar-expand-lg">
          <div class="container-fluid" style="min-width: 170px;">
            <% if user_signed_in? %>
              <div class="dropdown">
                <% if current_user.avatar? %>
                  <%= link_to image_tag(current_user.avatar_url(:icon)), '#', class: "dropdown-toggle hoveropacity avatar", role: "button", "data-bs-toggle": "dropdown", "aria-expanded": "false" %>
                <% else %>
                  <%= link_to image_tag('sampleavatar.jpeg'), '#', class: "dropdown-toggle hoveropacity avatar", role: "button", "data-bs-toggle": "dropdown", "aria-expanded": "false" %>
                <% end %>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li><span class="dropdown-item-text" style="pointer-events: none;"><%= current_user.nickname %> さん</span></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><%= link_to "マイページ", users_account_path, class: "dropdown-item" %></li>
                  <li><a class="dropdown-item" href="#">ユーザーメニュー２</a></li>
                  <li><a class="dropdown-item" href="#">ユーザーメニュー３</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "dropdown-item nondeco" %></li>
                </ul>
              </div>
            <% else %>
              <button class="navbar-toggler nonebutton" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="small" style="color: #7DD956;">▶ USER MENU</span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                  <%= link_to new_user_registration_path, class: "nondeco" do %>
                    <div class="roundbutton px-lg-3 py-lg-1 ms-lg-3">
                      <span class="nav-link py6px font-white">ユーザー登録</span>
                    </div>
                  <% end %>
                  <%= link_to new_user_session_path, class: "nondeco" do %>
                    <div class="roundbutton px-lg-3 py-lg-1 ms-lg-3">
                      <span class="nav-link py6px font-white">ログイン</span>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </nav>
      </div>
    </div>
  </div>
</div>
<nav class="navbar navbar-expand-xl navbar-light px-4 py-3" data-turbolinks="false" style="background-color: #DFDFDD;">
  <div class="container-fluid">
    <%= link_to "あなたのモノを共有しよう", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
        <li class="nav-item dropdown">
          <%= link_to "貸したい", '#', class: "nav-link dropdown-toggle lborder rborder text-black minwidth100", id: "navbarDropdown", role: "button", "data-bs-toggle": "dropdown", "aria-expanded": "false" %>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><%= link_to "乗り物を貸したい", '#', class: "dropdown-item" %></li>
            <li><%= link_to "倉庫を貸したい", '#', class: "dropdown-item" %></li>
            <li><%= link_to "土地を貸したい", '#', class: "dropdown-item" %></li>
            <li><hr class="dropdown-divider"></li>
            <li><%= link_to "その他の物を貸したい", '#', class: "dropdown-item" %></li>
          </ul>
        </li>
        <li class="nav-item dropdown">
          <%= link_to "レンタルしたい", '#', class: "nav-link dropdown-toggle lborder rborder text-black minwidth100", id: "navbarDropdown", role: "button", "data-bs-toggle": "dropdown", "aria-expanded": "false" %>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><%= link_to "乗り物をレンタルしたい", '#', class: "dropdown-item" %></li>
            <li><%= link_to "倉庫をレンタルしたい", '#', class: "dropdown-item" %></li>
            <li><%= link_to "土地をレンタルしたい", '#', class: "dropdown-item" %></li>
            <li><hr class="dropdown-divider"></li>
            <li><%= link_to "その他の物をレンタルしたい", '#', class: "dropdown-item" %></li>
          </ul>
        </li>
        <li class="nav-item minwidth100">
          <%= link_to "シェア予約状況", '#', class: "nav-link lborder rborder text-black" %>
        </li>
        <li class="nav-item minwidth100">
          <%= link_to "利用方法", '#', class: "nav-link lborder rborder text-black" %>
        </li>
      </ul>
      <form class="d-flex">
        <input class="form-control me-2" style="min-width: 250px;" type="search" placeholder="フリーワード検索" aria-label="Search">
        <button class="btn btn-outline-dark" style="min-width: 70px;" type="submit">検索</button>
      </form>
    </div>
  </div>
</nav>
