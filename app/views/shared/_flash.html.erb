<% flash.each do |message_type, message| %>
  <% if message_type == "alert" %>
    <div class="alert alert-danger flashmessage">
  <% elsif message_type == "notice" %>
    <div class="alert alert-success flashmessage">
  <% else %>
    <div class="alert alert-<%= message_type %> flashmessage">
  <% end %>
    <div class="d-flex">
      <div class="d-flex justify-content-between mx-auto"><%= message %></div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>
